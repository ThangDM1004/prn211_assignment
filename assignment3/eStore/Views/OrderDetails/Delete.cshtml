@model BusinessObjects.OrderDetail
@using Repositories;
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Delete";
    IOrderDetailRepository od = new OrderDetailRepository();
    var value = Context.Request.HttpContext.Session.GetString("role");
	if(value == null)
	{
        Context.Response.Redirect("/Home/Login");
	};
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>OrderDetail</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FlowerBouquet)
        </dt>
        <dd class = "col-sm-10">
            @od.GetOrderDetailByID(Model.OrderId, Model.FlowerBouquetId).FlowerBouquetId
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd class = "col-sm-10">
             @od.GetOrderDetailByID(Model.OrderId, Model.FlowerBouquetId).OrderId
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UnitPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Discount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>
        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderId" />
        <input type="hidden" asp-for="FlowerBouquetId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
