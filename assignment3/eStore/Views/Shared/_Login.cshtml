<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>eStore</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<header style="padding:30px; background-color:aqua">
		<div style="background-color:aqua" class="container">
			<a class="navbar-brand"><p style="font-size: 35px; margin-top: -20px;color: black">eStore</p></a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
					aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
		</div>
	</header>
	<div class="center">
		<h1 style="margin-left: 25px">Login eStore</h1><br />
		<form action="Home/LoginCheck">
			<div class="email">
				Email<input type="text" name="email" required><br />
			</div><br />
			<div class="pass">
				Password<input type="password" name="password" required><br />
			</div><br />
			<input class="btn-success" style="margin-left: 130px" type="submit" value="Login">
		</form>
	</div>

	<style>
		.center .email input {
			margin-left: 50px;
		}

		.center .pass input {
			margin-left: 21px;
		}

		.center {
			margin-left: 40%;
			margin-top: 10%;
		}
	</style>
	<div class="col-sm-3 col-md-6 col-lg-10">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
